#include <machdienchongtromv3.h>
#use delay(clock=20000000)
#use rs232(baud=9600,xmit=PIN_C6,rcv=PIN_C7,stream=GSM)
#define sensor PIN_C0
#define LCD_ENABLE_PIN  PIN_D5                       
#define LCD_RS_PIN PIN_D6 
#define LCD_RW_PIN PIN_D7
#define LCD_DATA4 PIN_B4
#define LCD_DATA5 PIN_B5
#define LCD_DATA6 PIN_B6
#define LCD_DATA7 PIN_B7
#include <lcd.c>
const char key[16] ={'1', '4', '7', '*','2', '5', '8', '0','3', '6', '9', '#',' ', 'A', 'B', 'C'};
void quetcot(unsigned char col)
{
        output_high(pin_a4);
        output_high(pin_a5);
        output_high(pin_e0);
        output_high(pin_e1);
        if(col==0)output_low(pin_a4);
        if(col==1)output_low(pin_a5);
        if(col==2)output_low(pin_e0);
        if(col==3)output_low(pin_e1);
}
unsigned char quetphim()
{ 
  unsigned char c=0,r=0xFF;
  for (c=0;c<4;c++)
  {
   quetcot(c);
   while (input(pin_a3)==0) r=c*4+0;
   while (input(pin_a2)==0) r=c*4+1;
   while (input(pin_a1)==0) r=c*4+2;
   while (input(pin_a0)==0) r=c*4+3;
  }
  return r;
}
void baodong()
{
   output_high(pin_c5);
   printf("AT+CMGF=1");
   putc(13);
   delay_ms(1000);
   printf("AT+CMGS=\"+084326264321\"\r");
   putc(13);
   delay_ms(1000);
   printf("Co trom dot nhap nha ban");
   putc(13);
   delay_ms(5000);
   printf("ATD+084326264321;");
   putc(13);
   delay_ms(15000);
   output_low(pin_c5);
}
void main()
{
   int x,a=0,sai=0,vong=0;
   char pass[6]={'1','2','3','4','5','6'};
   char mk[6]={};
   unsigned char phim;
   lcd_init();
   lcd_putc("Nhap mat khau:");
   while(TRUE)
   {
      output_high(pin_c4);
      x = input(pin_c0);
      if (x)
      {
         baodong();
      }
      phim=quetphim();
      if(phim==13)
      {
       delay_ms(5);
       if(phim==13)
       {
          vong=1;
       }
      }
      if (vong==1)
      {
         if(a==0)
         {
            mk[0]=key[phim];
            lcd_gotoxy(6,2);
            printf(lcd_putc,"%c",key[phim]);
            delay_ms(300);
            lcd_gotoxy(6,2);
            lcd_putc("*");
            a++;
         }
         if (a==1)
         {
            mk[1]=key[phim];
            lcd_gotoxy(7,2);
            printf(lcd_putc,"%c",key[phim]);
            delay_ms(300);
            lcd_gotoxy(7,2);
            lcd_putc("*");
            a++;
         }
         if (a==2)
         {
            mk[2]=key[phim];
            lcd_gotoxy(8,2);
            printf(lcd_putc,"%c",key[phim]);
            delay_ms(300);
            lcd_gotoxy(8,2);
            lcd_putc("*");
            a++;
         }
         if (a==3)
         {
            mk[3]=key[phim];
            lcd_gotoxy(9,2);
            printf(lcd_putc,"%c",key[phim]);
            delay_ms(300);
            lcd_gotoxy(9,2);
            lcd_putc("*");
            a++;
         }
         if (a==4)
         {
            mk[4]=key[phim];
            lcd_gotoxy(10,2);
            printf(lcd_putc,"%c",key[phim]);
            delay_ms(300);
            lcd_gotoxy(10,2);
            lcd_putc("*");
            a++;
         }
         if (a==5)
         {
            mk[5]=key[phim];
            lcd_gotoxy(11,2);
            printf(lcd_putc,"%c",key[phim]);
            delay_ms(300);
            lcd_gotoxy(11,2);
            lcd_putc("*");
            a++;
         }
       } 
       if(phim==15 && vong==1)
       {
         delay_ms(5);
         if(phim==15 && vong==1)
         {
            if (mk[0]==pass[0] && mk[1]==pass[1] && mk[2]==pass[2] && mk[3]==pass[3] && mk[4]==pass[4] && mk[5]==pass[5])
            {
               lcd_putc('\f');
               lcd_putc("Cua da mo");
               lcd_gotoxy(10,2);
               lcd_putc("Moi vao!");
               output_high(pin_c3);
               a=0;
               delay_ms(2000);
               output_low(pin_c3);
            }
            else
            {
               lcd_putc('\f');
               lcd_putc("Ban nhap sai");
               lcd_gotoxy(1,2);
               lcd_putc("Moi ban nhap lai");
               delay_ms(2000);
               lcd_putc('\f');
               lcd_putc("Nhap mat khau:");
               a=0;
               sai++;
            }
         }
       }
       if(phim==12 && vong==1)
       {
         DELAY_MS(5);
         if(phim==12)
         {
            if(a==1)
            {
               lcd_gotoxy(6,2);
               lcd_putc(" ");
               a--;
            }
            if(a==2)
            {
               lcd_gotoxy(7,2);
               lcd_putc(" ");
               a--;
            }
            if(a==3)
            {
               lcd_gotoxy(8,2);
               lcd_putc(" ");
               a--;
            }
            if(a==4)
            {
               lcd_gotoxy(9,2);
               lcd_putc(" ");
               a--;
            }
            if(a==5)
            {
               lcd_gotoxy(10,2);
               lcd_putc(" ");
               a--;
            }
         }
      }
       if (sai==5)
       {
         a=0;
         baodong();
         sai=0;
         vong=0;
       }
   }
}
